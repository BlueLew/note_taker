<div class="row justify-content-md-center">
  <p id="notice"><%= notice %></p>
</div>
<% if logged_in? && @user == current_user %>
	<h1 class='text-center mt-4'><%= @user.username %>'s Profile</h1>
	<%= gravatar_for @user, size: 200 %>
	<div class="text-center mt-4">
		<%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
	</div>
	<h3 class='text-center mt-4'><%= @user.username %>'s Notes</h3>
	<div class="row justify-content-md-center">
		<%= link_to "New Note", new_note_path, class: "btn btn-outline-success" %>
	</div>
	<div class="flickr_pagination">
		<%= will_paginate @notes, :container => false %>
	</div>

	<%= render 'notes/note' %>

	<div class="flickr_pagination mb-4">
		<%= will_paginate @notes, :container => false %>
	</div>
<% end %>
