<div class="row justify-content-md-center">
  <p id="notice"><%= notice %></p>
</div>

<h2 class='text-center mt-4'><%= @note.title %></h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by <%= @note.user.username if @note.user %>
        </div>
        <div class="card-body">
          <div class="card-text text-left">
          	<%= simple_format(@note.body) %>
          </div>
          <%= link_to "Edit", edit_note_path(@note), class: "btn btn-outline-info" %>
          <%= link_to "Delete", note_path(@note), method: :delete, 
            data: { confirm: "Are you sure you want to delete the note?" },
            class: "btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          Created <%= time_ago_in_words(@note.created_at) %> ago, 
          Edited <%= time_ago_in_words(@note.updated_at) %> ago
        </div>
      </div>
    </div>
  </div>
</div>
