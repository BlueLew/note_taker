<h2 class='text-center mt-4'><%= @note.title %></h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          <%= link_to gravatar_for(@note.user), user_path(@note.user) %>
          by <%= @note.user.username if @note.user %>
        </div>
        <div class="card-body">
          <div class="card-text text-left">
          	<%= simple_format(@note.body) %>
          </div>
          <%= link_to "Edit", edit_note_path(@note), class: "btn btn-outline-info" %>
          <%= link_to "Delete", note_path(@note), method: :delete, 
            data: { confirm: "Are you sure you want to delete the note?" },
            class: "btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          Created <%= @note.created_at.strftime("%B %d, %Y at %l:%M%P") %> --
          Edited <%= @note.updated_at.strftime("%B %d, %Y at %l:%M%P") %>
        </div>
      </div>
    </div>
  </div>
</div>
