<div class="container">
  <div class="row justify-content-center">
    <% if note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
        <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: note, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Note (required)"  %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :body, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= form.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "Body of Note" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <div class="actions">
            <%= form.submit class: "btn btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>

    <%= link_to '[ Cancel and return to notes listing ]', notes_path %>
  </div>
</div>
