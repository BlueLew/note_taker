<div class="container">
  <% @notes.sort_by(&:updated_at).reverse!.each do |note| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= note.user.username %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to note.title, note_path(note), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(note.body, length: 100) %></p>
            <%= link_to "View", note_path(note), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_note_path(note), class: "btn btn-outline-info" %>
            <%= link_to "Delete", note_path(note), method: :delete, 
              data: { confirm: "Are you sure you want to delete the note?" },
              class: "btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            Created <%= time_ago_in_words(note.created_at) %> ago, 
            Edited <%= time_ago_in_words(note.updated_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
